    <property>
      <code>/*
 * Blog list layout
 * --------------------------------------------------
 */
.blog-list-row {
  .blog-list {
    background-color: @breadcrumb-bg !important;
    background-color: @breadcrumb-color;
    border: solid @xwiki-border-color;
    border-width: 0 1px 1px 0;
    border-radius: 4px;
    box-shadow: 0 1px 2px @xwiki-border-color;
    color: @breadcrumb-active-color;
    padding: 0;

    .row {
      margin: 0;
    }
    .entry-author-date {
      font-size: 0.9em;
    }
    .col-xs-12 {
      .entry-title {
        font-size: 1.2em;
        padding: 15px 10px;
      }
      .entry-author-date {
        padding: 0 10px 10px 10px;
      }
    }
  }
  .hidden-article {
    opacity: 0.7;
  }
}
.link-to-blog {
  padding: 10px 15px 0 15px;
}
/*
 * Row with equal height columns
 * --------------------------------------------------
 */
@media (min-width : 768px) {
  .is-table-row {
    display: table;
    border-collapse: separate;
    border-spacing: 7px;
  }
  .is-table-row .col-md-6 {
    float: none;
    display: table-cell;
    vertical-align: top;
    width: 50%;
  }
  .blog-list-row .blog-list .col-xs-12 .entry-title {
    padding: 0;
    margin: 0 0 .5em;
  }
  .blog-list-row .blog-list .col-xs-12 .entry-author-date {
    padding: 0;
  }
}</code>
