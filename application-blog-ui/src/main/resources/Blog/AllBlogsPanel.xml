{{velocity}}
#set($mySyntax = $xwiki.getDocument('Blog.AllBlogsPanel').getSyntax())
#set ($xwql = "from doc.object(Blog.BlogClass) as blog where doc.fullName&lt;&gt;'Blog.BlogTemplate' order by blog.title")
#set ($results = $services.query.xwql($xwql).addFilter('currentlanguage').addFilter('hidden').execute())
#if ($results.size() &gt; 0)
#panelheader($services.localization.render('blog.allblogspanel.title'))
#foreach($item in $results)
  #set ($blogDocument = $xwiki.getDocument($item))
  #getBlogTitle($blogDocument $title)
  #if($title != '')
    * [[$services.rendering.escape($title,$mySyntax)&gt;&gt;$services.rendering.escape($blogDocument.fullName,$mySyntax)]]
  #else
    * [[$services.rendering.escape($item.displayTitle,$mySyntax)&gt;&gt;$services.rendering.escape($blogDocument.fullName,$mySyntax)]]
  #end
#end
#if ($hasAdmin)

(% class="manage-blogs-link" %)(((~([[$services.localization.render('blog.allblogspanel.manage')&gt;&gt;Blog.Management]]~))))
#end
#panelfooter()
#end
