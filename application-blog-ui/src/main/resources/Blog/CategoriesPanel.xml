    <property>
      <content>{{include reference="Blog.CategoriesCode"/}}

{{velocity}}
#panelheader($services.localization.render('blog.categories.paneltitle'))
#getBlogCategoriesLocation($doc.space $categoriesLocation)
#set ($categoriesLocationSpaceRef = $services.model.resolveSpace($categoriesLocation))
#set ($categoriesLocationDocRef = $services.model.createDocumentReference('WebHome', $categoriesLocationSpaceRef))
#set ($categoriesLocationDoc = $xwiki.getDocument($categoriesLocationDocRef))
#set ($allLink = $categoriesLocationDoc.URL)
#set ($queryString = $escapetool.url({'xpage': 'plain', 'sheet': 'Blog.BlogRss'}))
{{html wiki="true"}}
* (% class="blog-category-level" %)((( [[#toolImage('rss')&gt;&gt;$categoriesLocationDoc||queryString="$queryString" title="RSS"]] &lt;span class="wikilink"&gt;&lt;a href="$allLink"&gt;$services.localization.render('blog.categories.all')&lt;/a&gt;&lt;/span&gt;)))
{{/html}}

#getCategoriesHierarchy($categoriesLocation $tree)
{{html wiki="true"}}
#displayCategoriesHierarchy($tree 'simple')
{{/html}}
#if($hasAdmin)
  #set ($manageCategoriesPage = 'Blog.ManageCategories')
  #if ($categoriesLocation != $defaultBlogSpace)
    #set ($manageCategoriesPage = $categoriesLocationDoc.fullName)
    #set ($queryString = $escapetool.url({'action': 'manage'}))
  #end
  (% class="edit-categories" %)(((~([[$services.localization.render('blog.categories.edit')&gt;&gt;$manageCategoriesPage||queryString="$!queryString"]]~))))
#end
#panelfooter()
{{/velocity}}</content>
